{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard-with-typescript"
    ],
    "overrides": [
        {
            "files": ["src/**/*.ts[x]"]
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "project": true,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "@typescript-eslint/no-unused-vars": "warn"
    }
}
